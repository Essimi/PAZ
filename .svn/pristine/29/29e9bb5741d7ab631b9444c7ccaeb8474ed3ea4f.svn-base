@charset "UTF-8";

/* 차트 공용 */
.highcharts-credits{
		display : none;
	}

/* 업무 담당자별 할당 비율  */
.plTaskManagement-highcharts-figure,
.plTaskManagement-highcharts-data-table table {
  min-width: 320px;
  max-width: 660px;
  margin: 1em auto;
}

.plTaskManagement-highcharts-data-table table {
  font-family: Verdana, sans-serif;
  border-collapse: collapse;
  border: 1px solid #ebebeb;
  margin: 10px auto;
  text-align: center;
  width: 100%;
  max-width: 500px;
}

.plTaskManagement-highcharts-data-table caption {
  padding: 1em 0;
  font-size: 1.2em;
  color: #555;
}

.plTaskManagement-highcharts-data-table th {
  font-weight: 600;
  padding: 0.5em;
}

.plTaskManagement-highcharts-data-table td,
.plTaskManagement-highcharts-data-table th,
.plTaskManagement-highcharts-data-table caption {
  padding: 0.5em;
}

.plTaskManagement-highcharts-data-table thead tr,
.plTaskManagement-highcharts-data-table tr:nth-child(even) {
  background: #f8f8f8;
}

.plTaskManagement-highcharts-data-table tr:hover {
  background: #f1f7ff;
}



